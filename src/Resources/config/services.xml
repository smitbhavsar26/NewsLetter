<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service
            id="ICTECHNewsletterSubscriptionDiscount\Subscriber\Storefront\Page\Checkout\Cart\CheckoutCartPageSubscriber">
            <argument type="service" id="Shopware\Core\Checkout\Cart\SalesChannel\CartService"/>
            <argument type="service" id="Shopware\Core\Checkout\Promotion\Cart\PromotionItemBuilder"/>
            <argument type="service" id="Symfony\Contracts\EventDispatcher\EventDispatcherInterface"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="salutation.repository"/>
            <argument type="service" id="sales_channel.newsletter_recipient.repository"/>
            <argument type="service" id="newsletter_recipient.repository"/>
            <argument type="service" id="session"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service
            id="ICTECHNewsletterSubscriptionDiscount\Storefront\Controller\NewsletterSubscriptionDiscountController"
            public="true">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="ICTECHNewsletterSubscriptionDiscount\Storefront\Page\Subscriber\AppExtension">
            <argument type="service" id="promotion_discount.repository"/>
            <argument type="service" id="currency.repository"/>
            <argument type="service" id="newsletter_recipient.repository"/>
            <tag name="twig.extension"/>
        </service>

        <service id="ICTECHNewsletterSubscriptionDiscount\Core\Checkout\Cart\OverwritePriceCollector">
            <argument type="service" id="Shopware\Core\Checkout\Cart\Price\QuantityPriceCalculator"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="newsletter_recipient.repository"/>
            <argument type="service" id="Shopware\Core\Checkout\Cart\SalesChannel\CartService"/>
            <argument type="service" id="Shopware\Core\Checkout\Promotion\Cart\PromotionItemBuilder"/>
            <argument type="service" id="promotion.repository"/>
            <argument type="service" id="session"/>
            <!-- after product collector/processor -->
            <tag name="shopware.cart.processor" priority="5000"/>
            <tag name="shopware.cart.collector" priority="5000"/>
        </service>


    </services>
</container>
